<% provide(:title, @user.name) %>
<div class="profile row">
  
  <aside class="col-xs-3"> 
      <%= avatar_for(@user," ") %>
      <%= render 'shared/stats' %>
  </aside>
   <section class="main col-xs-9">
   <h2><%= @user.name %> <%= render 'follow_form' if signed_in? %></h2>
    
    <div class="post_count"><%= pluralize(@user.microposts.count, "micropost") %>
   </div>

    <%= render  'shared/feed', obj: @microposts %>
  </section>
</div>